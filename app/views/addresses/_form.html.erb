<%= form_with model: [ contact, address ], local: true do |form| %>

  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= pluralize(@address.errors.count, "error") %> prevented this address from being saved:
      </h3>
      <ul>
        <% @address.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :street, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :street, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :town, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :town, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :zip, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :zip, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :state, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :state, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :country, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.country_select :country, {priority_countries: ["US", "CZ"]}, class: "form-control form-control-sm"  %>
    </div>
  </div>

  <p>
    <%= form.submit class: "submit btn btn-sm btn-primary" %>
  </p>
  
<% end %>
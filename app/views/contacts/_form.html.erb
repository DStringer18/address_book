<%= form_with model: @contact, local: true do |form| %>

  <% if @contact.errors.any? %>
    <h2>Errors:</h2>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@contact.errors.count, "error") %> prevented this contact from being saved:
      </h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :salutation, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.select :salutation, options_for_select([['Mr.'], ['Mrs.'], ['Ms.'], ['Mx']]), class: "form-control form-control-sm"  %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :first_name, "First Name*", class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :first_name, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :middle_name, "Middle Name", class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :middle_name, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :last_name, "Last Name*", class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :last_name, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :dob, "Date of Birth", class: "col-sm-2 col-form-label col-form-label-sm" %><br>
    <div class="col-sm-10">
      <%= form.date_field :dob, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :comment, "Comment", class: "col-sm-2 col-form-label col-form-label-sm" %><br>
    <div class="col-sm-10">
      <%= form.text_area :comment, class: "form-control form-control-sm" %>
    </div>
  </div>

  <p>* = required field</p>

  <p>
    <%= form.submit class: "submit btn btn-sm btn-primary" %>
  </p>
 
<% end %>
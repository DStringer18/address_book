<%= form_with model: [ contact, phone_number ], local: true do |form| %>

  <% if @phone_number.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@phone_number.errors.count, "error") %> prevented this phone number from being saved:
      </h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :number, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_field :number, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :comment, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= form.text_area :comment, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div>
    <%= form.submit class: "submit btn btn-primary" %>
  </div>
<% end %>